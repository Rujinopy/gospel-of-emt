import img21 from "@/assets/docs/power-system/21.webp";
import img22 from "@/assets/docs/power-system/22.webp";

interface Props {
  entry: IndexCardsEntry;
}

const { entry } = Astro.props;
const { title, description } = entry.data;

// Create array of properly imported images
const processedImages = [
  img1.src, img2.src, img3.src, img4.src, img5.src, img6.src,
  img7.src, img8.src, img9.src, img10.src, img11.src, img12.src,
  img13.src, img14.src, img15.src, img16.src, img17.src, img18.src,
  img19.src, img20.src, img21.src, img22.src
];

---

<BaseLayout title={title} description={description}>
  <ImageSwiper images={processedImages} client:load />
</BaseLayout>
