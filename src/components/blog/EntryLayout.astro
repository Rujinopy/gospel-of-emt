---
import BaseLayout from "@components/base/BaseLayout.astro";
import BlogCard from "@components/blog/Card.astro";
import Share from "@components/common/Share.astro";
import { FaArrowLeft, FaArrowRight } from "react-icons/fa";
import { plainify } from "@lib/textConverter";
import type { BlogEntry } from "@/types";
import TableOfContents from "@components/common/TableOfContents.astro";
import { render } from "astro:content";
import EntryHeader from "@components/common/EntryHeader.astro";
import { getCollection } from "astro:content";

interface Props {
  entry: BlogEntry;
  relatedEntries: BlogEntry[];
  entryLength: number;
}

const { entry, relatedEntries, entryLength }: Props = Astro.props;
const { title, description, autodescription, image, hideToc } = entry.data;
const { Content, headings } = await render(entry);

const descriptionLenth = 200; // the max length in characters for the auto-generated description
const globalHideToc = false; // set true to always hide the table of contents (right side menu)
const tocDepth = 3; // maximum depth for the table of contents 1 = h1, etc

const actuallyHideToc =
  hideToc ||
  globalHideToc ||
  headings.filter((heading) => heading.depth <= tocDepth).length === 0;

const entryDescription =
  description ||
  (autodescription ? plainify(entry.body!.slice(0, descriptionLenth)) : null);

// Date-based navigation logic
const allBlogEntries = await getCollection("blog");
const sortedEntries = allBlogEntries
  .filter((blogEntry) => blogEntry.data.date) // Only entries with dates
  .sort((a, b) => {
    const dateA = new Date(a.data.date as string | number | Date);
    const dateB = new Date(b.data.date as string | number | Date);
    return dateA.getTime() - dateB.getTime();
  });

const currentIndex = sortedEntries.findIndex((blogEntry) => blogEntry.id === entry.id);
const prevEntry = currentIndex > 0 ? sortedEntries[currentIndex - 1] : null;
const nextEntry = currentIndex < sortedEntries.length - 1 ? sortedEntries[currentIndex + 1] : null;

const prevChapterUrl = prevEntry ? `/blog/${prevEntry.id}` : null;
const nextChapterUrl = nextEntry ? `/blog/${nextEntry.id}` : null;
---

<BaseLayout title={title} description={entryDescription} image={image?.src}>
  <section class="flex md:container md:p-4 p-2">
    <div class=`w-full ${actuallyHideToc ? "" : "md:col-9"}`>
      <div class="flex items-center justify-between space-x-10">
      {
        prevChapterUrl && prevEntry && (
          <a href={prevChapterUrl} class="font-notoLooped neobrutalism-button text-sm md:text-[18px]" title={prevEntry.data.title}>
            <FaArrowLeft className="inline-block mr-2" /> ตอนก่อนหน้า
          </a>
        )
      }
      {
        nextChapterUrl && nextEntry && (
          <a href={nextChapterUrl} class="font-notoLooped neobrutalism-button text-sm md:text-[18px]" title={nextEntry.data.title}>
            ตอนถัดไป
            <FaArrowRight className="inline-block ml-2" />
          </a>
        )
      }
    </div>
      <article class="">
        <section>
          <EntryHeader
            entry={entry}
            showImage
            showAuthor
            showDate
            showReadingTime
            showCategories
            showTags
          />
        </section>
        <section
          class="content mb-4 glass bg-white px-5 md:px-[22%] rounded-lg font-notoLooped"
        >
          <Content />
        </section>
      </article>
    </div>
    <div
      class=`hidden max-h-static_sidemenu sticky top-[5rem] pl-4 ${globalHideToc || hideToc ? "" : "md:flex md:col-3"}`
    >
      <TableOfContents {headings} />
    </div>
  </section>
  <!-- 
  <section class=`container items-start justify-between mt-4`>
    <hr />
    <div class="flex items-center justify-center lg:justify-end mt-4">
      <Share
        title={title}
        description={entryDescription}
        folder={"blog"}
        id={entry.id}
      />
    </div>
  </section> -->

  <!-- Next Chapter -->
  <section class="container my-8 text-xl">
    <!-- <hr /> -->
    <div class="flex items-center justify-center space-x-10">
      {
        prevChapterUrl && prevEntry && (
          <a href={prevChapterUrl} class="font-notoLooped neobrutalism-button text-sm md:text-[18px]" title={prevEntry.data.title}>
            <FaArrowLeft className="inline-block mr-2" /> ตอนก่อนหน้า
          </a>
        )
      }
      {
        nextChapterUrl && nextEntry && (
          <a href={nextChapterUrl} class="font-notoLooped neobrutalism-button text-sm md:text-[18px]" title={nextEntry.data.title}>
            ตอนถัดไป
            <FaArrowRight className="inline-block ml-2" />
          </a>
        )
      }
    </div>

    <!-- Related posts -->
    <!-- {
      relatedEntries.length > 0 && (
        <section class="row justify-center my-8">
          <h2 class="h3 mb-4 text-center">Related Posts</h2>
          <div class="lg:col-10">
            <div class="row justify-center">
              {relatedEntries.slice(0, 2).map((entry) => (
                <div class="md:col-6 px-4 py-2 h-min">
                  <BlogCard entry={entry} />
                </div>
              ))}
            </div>
          </div>
        </section>
      )
    } -->
  </section>
</BaseLayout>


