---
import type { BlogEntry } from "@/types";

interface Props {
  entry: BlogEntry;
}

const { entry }: Props = Astro.props;
const {
  title,
} = entry.data;

---

<div class="h-full rounded-lg group cursor-pointer transition-all duration-300 hover:transform hover:-translate-y-2 hover:shadow-[6px_6px_0px_0px_theme(colors.black)] hover:border-black">
  <a href={`/blog/${entry.id}`} class="block h-full group-hover:no-underline">
    <div class="glass h-full rounded-lg intersect:animate-fadeUp opacity-0 group-hover:bg-opacity-90 transition-all duration-100 flex items-center p-2">
      <h4 class="py-1 font-notoLooped text-[16px] md:text-xl group-hover:font-black group-hover:text-black dark:group-hover:text-white transition-all duration-300">
        {title}
      </h4>
    </div>
  </a>
</div>
